FROM nginx:1.25.3-bookworm

RUN apt-get update && apt-get upgrade
RUN apt-get install -y openssl certbot python3-certbot-nginx

ADD ./conf/default-digitalo.conf /etc/nginx/nginx.conf
COPY ./tools/entry-point-digitalo.sh /
RUN chmod +x /entry-point-digitalo.sh
COPY ./www /var/www/


ENTRYPOINT ["/entry-point-digitalo.sh"]
